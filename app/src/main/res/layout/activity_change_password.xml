                            android:longClickable="true"
                            android:maxLength="25"
                            android:padding="5dp"
                            android:textColor="@color/white"
                            android:importantForAutofill="no"
                            android:textColorHint="#BDB9B9"
                            android:textSize="16sp" />
                    </LinearLayout>


